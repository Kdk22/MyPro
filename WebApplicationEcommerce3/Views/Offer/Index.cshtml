
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"></script>
    <script src="~/Scripts/Offers.js"></script>
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
    <div id="SearchOffers">
        <input id="SearchTxt" value="Search Offers" type="text" /><input id="SearchBtn" type="button" value="Search" onclick="SearchByName()" />
    </div>
    <div>
        <table id="tblOffers" border="0" cellpadding="0" cellspacing="0">
            <tbody class="tbody"></tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Offers</button><br /><br />
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Add Offer</h4>
                </div>
                <div class="modal-body">
                    <form>
                        @*<div class="form-group">
                                <label for="OfferId">OfferID</label>
                                <input type="text" class="form-control" id="EmployeeID" placeholder="Id" disabled="disabled" />
                            </div>*@
                        <div class="form-group">
                            <label for="ProductId">ProductId</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>
                        <div class="form-group">
                            <label for="OfferPrice">OfferPrice</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>

                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>
                        <div class="form-group">
                            <label for="Active">Active</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>
                        <div class="form-group">
                            <label for="OfferStartDate">OfferStartDate</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>
                        <div class="form-group">
                            <label for="OfferEndDate">OfferEndDate</label>
                            <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" />
                        </div>


                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="HdnOfferId" value="0" />
</body>
</html>


