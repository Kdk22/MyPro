
@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"></script>
    <script src="~/Scripts/WishList.js"></script>
    <title></title>
    <meta charset="utf-8" />
</head>
<body onload="GetDateTime();">
    <div id="SearchWishList">
        <input id="SearchTxt" value="Search WishList" type="text" /><input id="SearchBtn" type="button" value="Search" onclick="SearchWishList()" />
    </div>
    <div>
        <table id="tblWishList" border="0" cellpadding="0" cellspacing="0">
            <tbody class="tbody"></tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New WishList</button><br /><br />
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Add WishList</h4>
                </div>
                <div class="modal-body">
                    <form>
                        @*<div class="form-group">
                                <label for="WishListId">ID</label>
                                <input type="text" class="form-control" id="WishListId" placeholder="Id" disabled="disabled" />
                            </div>*@
                        <div class="form-group">
                            <label for="CustomerId">CustomerId</label>
                            <input type="text" class="form-control" id="CustomerId" placeholder="CustomerId" />
                        </div>

                        <div class="form-group">
                            <label for="ProductId">ProductId</label>
                            <input type="text" class="form-control" id="ProductId" placeholder="ProductId" />
                        </div>

                        <div class="form-group">
                            <label for="InsertDate">Insert Date</label>
                            <input type="text" class="form-control" id="InsertDate" placeholder="DD/MM/YYYY 00:00:00AM" />
                        </div>
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="text" class="form-control" id="Image" placeholder="Image" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="HdnWishListId" value="0" />
</body>
</html>


